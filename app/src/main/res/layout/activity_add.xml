<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_add">

    <EditText
    android:id="@+id/editTextTextPersonName"
    android:layout_width="165dp"
    android:layout_height="42dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <EditText
    android:id="@+id/editTextTextPersonSirname"
    android:layout_width="165dp"
    android:layout_height="42dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="sirname"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <EditText
    android:id="@+id/editTextTextPersonTrip"
    android:layout_width="165dp"
    android:layout_height="42dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="32dp"
    android:ems="10"
    android:text="ekdromh"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonSirname" />


    <EditText
    android:id="@+id/editTextTextPersonHotel"
    android:layout_width="165dp"
    android:layout_height="42dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="23dp"
    android:ems="10"
    android:text="hotel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonTrip" />

    <Button
    android:id="@+id/button"
    android:layout_width="159dp"
    android:layout_height="60dp"
    android:layout_marginStart="36dp"
    android:onClick="saveNote"
    android:text="Climk to Summit"
    app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName"
    tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>